@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NUMETRO MOVIES</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<body>
    <!-- NAVBAR -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm">
        <div class="container-fluid">

            <a class="navbar-brand" asp-page="/Movies/Index">Movies</a>

            <button class="navbar-toggler" data-bs-toggle="collapse" data-bs-target="#navMenu">
                <span class="navbar-toggler-icon"></span>
            </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-page="/Subscribe/Subscribe">Subscribe</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Dashboard">Dashboard</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

    <!-- HEADER CENTERED -->
    <header class="text-center p-4" style="background-color:#ADD8E6;">
        <h1 class="fw-bold">Razor Page Movies</h1>
    </header>

    <!-- MAIN CONTENT AREA -->
    <div class="container mt-4">
        <main role="main" class="pb-4">
            @RenderBody()
        </main>
    </div>

    <!-- FOOTER -->
    <footer class="border-top footer text-muted mt-4 py-3">
        <div class="container text-center">
            &copy; 2025 - RazorPagesMovie |
            <a asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <!-- SCRIPTS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @using Microsoft.AspNetCore.Identity
    @inject SignInManager<IdentityUser>
        SignInManager
        @inject UserManager<IdentityUser>
            UserManager

            <nav>
                <ul>
                    @if (SignInManager.IsSignedIn(User))
        {
                    <li>Hello, @User.Identity.Name!</li>
                    <li><a asp-page="/Account/Logout">Logout</a></li>
        }
        else
        {
                    <li><a asp-page="/Account/Login">Login</a></li>
                    <li><a asp-page="/Account/Register">Register</a></li>
        }
                </ul>
            </nav>

</body>
</html>
