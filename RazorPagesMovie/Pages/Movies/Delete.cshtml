@page
@model RazorPagesMovie.Pages.Movies.DeleteModel
@{
    ViewData["Title"] = "Delete Movie";
}

<div class="d-flex justify-content-center">
    <div class="card shadow-lg p-4 mt-4" style="width: 95%; max-width: 700px;">
        <h2 class="text-center mb-4 fw-bold text-danger">🗑️ Confirm Delete</h2>

        <div class="mb-3">
            <p class="lead">Are you sure you want to delete the movie:</p>
            <h4 class="fw-bold text-primary">@Model.Movie.Title</h4>
        </div>

        <dl class="row">
            <dt class="col-sm-4 fw-semibold">Release Date</dt>
            <dd class="col-sm-8">@Model.Movie.ReleaseDate.ToString("yyyy/MM/dd")</dd>

            <dt class="col-sm-4 fw-semibold">Genre</dt>
            <dd class="col-sm-8">@Model.Movie.Genre</dd>

            <dt class="col-sm-4 fw-semibold">Price</dt>
            <dd class="col-sm-8">R @Model.Movie.Price</dd>

            <dt class="col-sm-4 fw-semibold">Rating</dt>
            <dd class="col-sm-8">
                @for (int i = 0; i < Model.Movie.Rating; i++)
                {
                    <span style="color:gold; font-size:1.2em;">★</span>
                }
                @for (int i = 0; i < 5 - Model.Movie.Rating; i++)
                {
                    <span style="color:#d4d4d4; font-size:1.2em;">★</span>
                }
            </dd>
        </dl>

        <form method="post">
            <input type="hidden" asp-for="Movie.Id" />
            <div class="d-flex justify-content-between mt-4">
                <a asp-page="./Index" class="btn btn-outline-secondary">Cancel</a>
                <button type="submit" class="btn btn-danger shadow-sm">Delete</button>
            </div>
        </form>
    </div>
</div>
