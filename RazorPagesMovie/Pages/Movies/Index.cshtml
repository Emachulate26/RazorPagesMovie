@page
@model RazorPagesMovie.Pages.Movies.IndexModel
@{
    ViewData["Title"] = "Index";
}

<div class="card shadow p-4 mt-4">

    <h1 class="mb-3">Movies</h1>

    <p>
        <a class="btn btn-primary" asp-page="Create">Create New</a>
    </p>

    <!-- FILTER FORM -->
    <form method="get" class="row g-3 mb-4">

        <div class="col-md-3">
            <label class="form-label">Genre</label>
            <select asp-for="MovieGenre" asp-items="Model.Genres" class="form-select">
                <option value="">All</option>
            </select>
        </div>

        <div class="col-md-3">
            <label class="form-label">Title</label>
            <input type="text" asp-for="SearchString" class="form-control" placeholder="Search title..." />
        </div>

        <div class="col-md-2 d-flex align-items-end">
            <input type="submit" value="Filter" class="btn btn-secondary" />
        </div>

    </form>

    <!-- MOVIE TABLE -->
    <div class="table-responsive mt-4">
        <table class="table table-bordered table-striped table-hover shadow-sm align-middle">

            <thead style="background: linear-gradient(90deg, #1e3c72, #2a5298); color: white;">
                <tr>
                    <th class="py-3">Title</th>
                    <th class="py-3">Release Date</th>
                    <th class="py-3">Genre</th>
                    <th class="py-3">Price</th>
                    <th class="py-3">Rating</th>
                    <th class="py-3 text-center" style="width:150px;">Actions</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model.Movie)
                {
                    <tr style="background-color: #f9fbff;">
                        <td class="fw-bold">@item.Title</td>
                        <td>@item.ReleaseDate.ToString("yyyy/MM/dd")</td>
                        <td><span class="badge bg-primary">@item.Genre</span></td>
                        <td><span class="text-success fw-bold">R @item.Price</span></td>

                        <!-- STAR RATING -->
                        <td>
                            @for (int i = 0; i < item.Rating; i++)
                            {
                                <span style="color:gold; font-size:1.3em;">★</span>
                            }
                            @for (int i = 0; i < 5 - item.Rating; i++)
                            {
                                <span style="color:#d4d4d4; font-size:1.3em;">★</span>
                            }
                        </td>

                        <td class="text-center">
                            <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm me-1">Edit</a>
                            <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-info btn-sm me-1 text-white">Details</a>
                            <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
</div>
