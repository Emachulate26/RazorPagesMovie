@page
@model RazorPagesMovie.Pages.Movies.IndexModel
@{
    ViewData["Title"] = "Index";
}

<div class="card shadow p-4 mt-4">

    <h1 class="mb-3">Movies</h1>

    <p>
        <a class="btn btn-primary" asp-page="Create">Create New</a>
    </p>

    <!-- FILTER FORM -->
    <form method="get" class="row g-3 mb-4">

        <div class="col-md-3">
            <label class="form-label">Genre</label>
            <select asp-for="MovieGenre" asp-items="Model.Genres" class="form-select">
                <option value="">All</option>
            </select>
        </div>

        <div class="col-md-3">
            <label class="form-label">Title</label>
            <input type="text" asp-for="SearchString" class="form-control" placeholder="Search title..." />
        </div>

        <div class="col-md-2 d-flex align-items-end">
            <input type="submit" value="Filter" class="btn btn-secondary" />
        </div>

    </form>

    <!-- TABLE -->
    <table class="table table-striped table-hover table-bordered shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>Title</th>
                <th>Release Date</th>
                <th>Genre</th>
                <th>Price</th>
                <th>Rating</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Movie)
            {
                <tr>
                    <td>@item.Title</td>
                    <td>@item.ReleaseDate.ToShortDateString()</td>
                    <td>@item.Genre</td>
                    <td>@item.Price</td>
                    <td>@item.Rating</td>
                    <td>
                        @for (int i = 0; i < item.Rating; i++)
                        {
                            <span style="color: gold; font-size: 1.3em;">★</span>
                        }
                        @for (int i = 0; i < 5 - item.Rating; i++)
                        {
                            <span style="color: lightgray; font-size: 1.3em;">★</span>
                        }
                    </td>


                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                        <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Details</a>
                        <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
