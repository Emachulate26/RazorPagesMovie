@page
@model IndexModel
@{
    ViewData["Title"] = "NUMETRO MOVIES";
}

<style>
    body {
        margin: 0;
        padding: 0;
        background: linear-gradient(135deg, #0f0f0f 0%, #1b1d2d 40%, #2e3258 100%);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        color: white;
    }

    .hero-wrapper {
        height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 20px;
    }

    /* 🎟 Movie Ticket Card */
    .ticket {
        width: 85%;
        max-width: 850px;
        background: rgba(255, 255, 255, 0.05);
        border-radius: 16px;
        padding: 40px;
        text-align: center;
        position: relative;
        border: 2px solid rgba(255, 255, 255, 0.1);
        box-shadow: 0 0 30px rgba(255, 255, 255, 0.08);
        backdrop-filter: blur(8px);
        animation: fadeIn 1.2s ease-out forwards;
        opacity: 0;
    }

        /* Ticket perforated edges */
        .ticket:before, .ticket:after {
            content: "";
            position: absolute;
            width: 20px;
            height: 20px;
            background: #0f0f0f;
            border-radius: 50%;
            top: 50%;
            transform: translateY(-50%);
        }

        .ticket:before {
            left: -10px;
        }

        .ticket:after {
            right: -10px;
        }

    h1.title {
        font-size: 3.5rem;
        font-weight: 800;
        letter-spacing: 3px;
        margin-bottom: 15px;
        text-shadow: 0 0 10px rgba(255, 255, 255, 0.45);
    }

    p.tagline {
        font-size: 1.2rem;
        opacity: 0.85;
        margin-bottom: 35px;
        max-width: 650px;
        margin-left: auto;
        margin-right: auto;
    }

    /* 🎬 Buttons */
    .btn-custom {
        font-size: 1.1rem;
        padding: 12px 26px;
        border-radius: 8px;
        text-decoration: none;
        margin: 10px;
        display: inline-block;
        transition: 0.25s ease;
    }

    .btn-movies {
        background: #ff4747;
        color: white;
    }

        .btn-movies:hover {
            background: #ff2b2b;
            transform: scale(1.06);
        }

    .btn-subscribe {
        background: #0099ff;
        color: white;
    }

        .btn-subscribe:hover {
            background: #007bce;
            transform: scale(1.06);
        }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(25px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>

<div class="hero-wrapper">
    <div class="ticket">
        <h1 class="title">NUMETRO MOVIES</h1>
        <p class="tagline">
            Experience movies like never before. Explore the latest releases, find showtimes,
            and subscribe for instant updates — all in one cinematic experience.
        </p>

        <a asp-page="/Movies/view" class="btn-custom btn-movies">🎬 Browse Movies</a>
        <a asp-page="/Subscriptions/Index" class="btn-custom btn-subscribe">🎟 Subscribe</a>
    </div>
</div>